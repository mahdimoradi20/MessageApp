<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rec_chatdialogs_root"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rec_chatdialog_item_image"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_65sdp"
        android:src="@drawable/default_profile"
        android:layout_alignParentRight="true"
        />

        <TextView
            android:id="@+id/rec_chatdialog_item_txt_name"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_alignTop="@id/rec_chatdialog_item_image"
            android:layout_toLeftOf="@id/rec_chatdialog_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vazribold"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="#000"
            android:text="این یک عنوان تستی است"/>

    <TextView
        android:id="@+id/rec_chatdialog_item_txt_last_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="این یک متن تست است"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:fontFamily="@font/vazir"
        android:layout_below="@id/rec_chatdialog_item_txt_name"
        android:layout_toLeftOf="@id/rec_chatdialog_item_image"  />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_toLeftOf="@id/rec_chatdialog_item_image"
        android:layout_below="@id/rec_chatdialog_item_image"
        android:background="@android:color/darker_gray" />

</RelativeLayout>