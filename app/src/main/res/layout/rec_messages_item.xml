<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rec_message_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    android:layoutDirection="ltr"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rec_message_img_profile"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:src="@drawable/default_profile"
        android:layout_gravity="bottom"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/rec_message_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rec_message_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/_130sdp"
                android:fontFamily="@font/vazribold"
                android:textColor="#000"
                android:textSize="@dimen/_9sdp"
                android:layout_gravity="right"
                tools:text ="نام کاربر اینجا میآیدنام کاربر اینجا میآیدنام کاربر اینجا میآیدنام کاربر اینجا میآیدنام کاربر اینجا میآید"
                android:maxLines="2" />
            <TextView
                android:id="@+id/rec_message_text"
                android:layout_width="wrap_content"
                android:maxWidth="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vazir"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="#000"
                tools:text="متن پیام اینجا می آیدمتن پیام اینجا می آیدمتن پیام اینجا می آیدمتن پیام اینجا می آیدمتن پیام اینجا می آیدمتن پیام اینجا می آیدمتن پیام اینجا می آیدمتن پیام اینجا می آیدمتن پیام اینجا می آید" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:layout_gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/rec_message_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:fontFamily="@font/vazir"
                    android:textSize="@dimen/_8sdp"
                    android:text="17:50"/>
                <ImageView
                    android:id="@+id/rec_message_state"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/ic_sended"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>